# ============================================================
# CrystalBall Configuration
# Copy to .env and fill in your values
# NEVER commit .env to version control
# ============================================================

# ------------------------------------------------------------
# Alpaca (required for market data + trading)
# Get keys at: https://alpaca.markets
# ------------------------------------------------------------
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
# Use paper for testing, live for real money
ALPACA_BASE_URL=https://paper-api.alpaca.markets
# ALPACA_BASE_URL=https://api.alpaca.markets

# ------------------------------------------------------------
# AI Assistant (optional — at least one recommended)
# ------------------------------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Which model to use for daily reports
AI_PROVIDER=openai         # openai | anthropic
AI_MODEL=gpt-4o            # gpt-4o | claude-opus-4-5 | etc.

# ------------------------------------------------------------
# Discord (optional — for notifications and daily reports)
# ------------------------------------------------------------
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_channel_id_for_reports

# ------------------------------------------------------------
# Daily Report Schedule (cron syntax, UTC)
# Default: 8:30 AM ET = 13:30 UTC on weekdays
# ------------------------------------------------------------
REPORT_SCHEDULE=30 13 * * 1-5

# ------------------------------------------------------------
# Database
# ------------------------------------------------------------
DATABASE_URL=sqlite:///./data/crystalball.db
